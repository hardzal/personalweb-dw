{{#> layout }}
  <div class="container">
      <main>
        <div class="post-add">
          <form
            id="postForm"
            action="/project/add"
            method="post"
            class="form-container"
          >
            <h1>ADD TO MY PROJECT</h1>
            <div class="forms">
              <div class="form-field">
                <label for="title">Project Name</label>
                <input
                  id="title"
                  name="title"
                  class="form-input"
                  type="text"
                  required
                />
              </div>
              <div class="form-field">
                <div class="form-date">
                  <div class="input-date">
                    <label for="start_date">Start Date</label>
                    <input
                      id="start_date"
                      name="start_date"
                      class="form-input"
                      type="date"
                      required
                    />
                  </div>
                  <div class="input-date">
                    <label for="end_date">End Date</label>
                    <input
                      id="end_date"
                      name="end_date"
                      class="form-input"
                      type="date"
                      required
                    />
                  </div>
                </div>
              </div>
              <div class="form-field">
                <label for="description">Description</label>
                <textarea
                  id="description"
                  name="description"
                  class="form-text"
                  minlength="50"
                  maxlength="1500"
                ></textarea>
              </div>
              <div class="form-field">
                <label for="technologies">Technologies</label>
                <div class="form-checkbox">
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="nodejs"
                      name="technologies"
                      class="input-checkbox"
                      value="nodejs"
                    />Node Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="nextjs"
                      name="technologies"
                      class="input-checkbox"
                      value="nextjs"
                    />Next Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="reactjs"
                      name="technologies"
                      class="input-checkbox"
                      value="reactjs"
                    />React Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="typescript"
                      name="technologies"
                      class="input-checkbox"
                      value="typescript"
                    />Typescript
                  </div>
                </div>
              </div>
              <div class="form-field">
                <label for="upload-image">Upload Image</label>
                <div class="upload-image-project">
                  <label for="upload-image">
                    <span>Attach File</span>
                    <img src="/assets/images/file.png" alt="upload-file" />
                  </label>
                  <input
                    type="file"
                    name="image"
                    id="upload-image"
                    class="form-upload"
                    required
                    hidden
                  />
                </div>
              </div>
              <button type="submit" class="form-submit-button">Submit</button>
            </div>
          </form>
        </div>
      </main>
    </div>
    <section>
      <div class="project-post">
        <div class="post-header">
          <h2>MY PROJECT</h2>
        </div>
        <div class="main-post" id="post-main">
          {{#each data}}
          <div class="post-item">
            <div class="post-thumbnail">
              <a href="#">
                <img src="./assets/images/blog-img.png" alt="title" />
              </a>
            </div>
            <div class="post-title">
              <a href="#">
                <h2>{{this.title}}</h2>
              </a>
            </div>
            <div class="post-time">
              <span>Posted at {{this.createdAt}}</span> ||
              <span>Durasi : 1 bulan</span>
            </div>
            <div class="post-summary">
              <p>
                {{this.description}}
              </p>
            </div>
            <div class="post-category">
              <span>js</span>
              <span>nextjs</span>
              <span>nodejs</span>
            </div>
            <div class="post-button">
              <a href="/project/{{this.id}}/edit" class="button-edit" target="_blank">edit</a>
              <a href="/project/{{this.id}}/detail">detail</a>
              <form action="/project/{{this.id}}?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{this.id}}"/>
                <button type="submit" class="button-delete">delete</button>
              </form>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    <script src="./js/script.js" type="text/javascript"></script>
{{/layout}}