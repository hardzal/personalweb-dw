{{#>layout title="Project Details" userLoggedIn=userSession}}
    <main>
      <div class="container">
        {{#with data}}
        <div class="post-header">
          <h1>{{title}}</h1>
        </div>
        <div class="post-detail">
          <div class="post-image">
            <img
              src="http://localhost:5000/{{image}}"
              alt="{{title}}"
              title="{{title}}"
            />
          </div>
          <div class="post-meta">
            <div class="post-meta-duration">
              <h4>Duration</h4>
              <p>{{timePost start_date}} - {{timePost end_date}}</p>
              <p>{{getRelativeTime start_date end_date}}</p>
            </div>
            <div class="post-meta-technologies">
              <h4>Technologies</h4>
              <div class="post-categories">
                {{{labelPost technologies}}}
              </div>
            </div>
          </div>
        </div>
        <div class="post-description">
          <p>{{description}}</p>
        </div>
      {{/with}}
      </div>
    </main>
{{/layout}}