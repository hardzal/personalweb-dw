{{#> layout }}
  <div class="container">
      <main>
        {{#with data}}
        <div class="post-add">
          <form
            id="postForm"
            action="/project/{{id}}?_method=PUT"
            method="post"
            class="form-container"
          >
            <h1>EDIT TO MY PROJECT</h1>
            <div class="forms">
              <div class="form-field">
                <label for="title">Project Name</label>
                <input
                  id="title"
                  name="title"
                  class="form-input"
                  type="text"
                  value="{{title}}"
                  required
                />
              </div>
              <div class="form-field">
                <div class="form-date">
                  <div class="input-date">
                    <label for="start_date">Start Date</label>
                    <input
                      id="start_date"
                      name="start_date"
                      class="form-input"
                      type="date"
                      value="{{changeDate start_date}}"
                      required
                    />
                  </div>
                  <div class="input-date">
                    <label for="end_date">End Date</label>
                    <input
                      id="end_date"
                      name="end_date"
                      class="form-input"
                      type="date"
                      value="{{changeDate end_date}}"
                      required
                    />
                  </div>
                </div>
              </div>
              <div class="form-field">
                <label for="description">Description</label>
                <textarea
                  id="description"
                  name="description"
                  class="form-text"
                  minlength="50"
                  maxlength="1500"
                >{{description}}</textarea>
              </div>
              <div class="form-field">
                <label for="technologies">Technologies</label>
                <div class="form-checkbox">
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="nodejs"
                      name="technologies"
                      class="input-checkbox"
                      value="nodejs"
                      {{{checkBox technologies "nodejs"}}}
                    />Node Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="nextjs"
                      name="technologies"
                      class="input-checkbox"
                      value="nextjs"
                      {{{checkBox technologies "nextjs"}}}
                    />Next Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="reactjs"
                      name="technologies"
                      class="input-checkbox"
                      value="reactjs"
                      {{{checkBox technologies "reactjs"}}}
                    />React Js
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      value="typescript"
                      name="technologies"
                      class="input-checkbox"
                      value="typescript"
                      {{{checkBox technologies "typescript"}}}
                    />Typescript
                  </div>
                </div>
              </div>
              <div class="form-field">
                <label for="upload-image">Upload Image</label>
                <span>upload on progress</span>
                <div class="upload-image-project">
                  <label for="upload-image">
                    <span>Attach File</span>
                    <input type="hidden" value="{{image}}" name="image"/>
                    <img src="/assets/images/file.png" alt="upload-file" />
                  </label>
                  <input
                    type="file"
                    name="image-upload"
                    id="upload-image"
                    class="form-upload"
                    {{!-- required --}}
                    hidden
                  />
                </div>
              </div>
              <input type="hidden" value="{{id}}" name="id"/>
              <button type="submit" class="form-submit-button">Submit</button>
            </div>
          </form>
        </div>
        {{/with}}
      </main>
    </div>
{{/layout}}